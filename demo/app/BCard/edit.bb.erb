<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @bcard.object %>
    <h1>Edit <%= @bcard.address%></h1>
    <%= link_to "Delete", :action => :delete, :id => @bcard.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @bcard.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Address: </td>
              <td class="itemValue"><input type="text" name="bcard[address]" value="<%= @bcard.address %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Name: </td>
              <td class="itemValue"><input type="text" name="bcard[name]" value="<%= @bcard.name %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Email: </td>
              <td class="itemValue"><input type="text" name="bcard[email]" value="<%= @bcard.email %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Company: </td>
              <td class="itemValue"><input type="text" name="bcard[company]" value="<%= @bcard.company %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
