<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @bcard.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @bcard.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="bcard[address]" class="fieldLabel">Address</label>
            <input type="text" id="bcard[address]" name="bcard[address]" <%= placeholder("Address") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="bcard[name]" class="fieldLabel">Name</label>
            <input type="text" id="bcard[name]" name="bcard[name]" <%= placeholder("Name") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="bcard[email]" class="fieldLabel">Email</label>
            <input type="text" id="bcard[email]" name="bcard[email]" <%= placeholder("Email") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="bcard[company]" class="fieldLabel">Company</label>
            <input type="text" id="bcard[company]" name="bcard[company]" <%= placeholder("Company") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
