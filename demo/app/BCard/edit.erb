<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @bcard.address %></h1>
    <a href="<%= url_for :action => :show, :id => @bcard.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
    <a href="<%= url_for :action => :delete, :id => @bcard.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">Delete</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @bcard.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="bcard[address]" class="fieldLabel">Address</label>
            <input type="text" id="bcard[address]" name="bcard[address]" value="<%= @bcard.address %>" <%= placeholder( "Address" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="bcard[name]" class="fieldLabel">Name</label>
            <input type="text" id="bcard[name]" name="bcard[name]" value="<%= @bcard.name %>" <%= placeholder( "Name" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="bcard[email]" class="fieldLabel">Email</label>
            <input type="text" id="bcard[email]" name="bcard[email]" value="<%= @bcard.email %>" <%= placeholder( "Email" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="bcard[company]" class="fieldLabel">Company</label>
            <input type="text" id="bcard[company]" name="bcard[company]" value="<%= @bcard.company %>" <%= placeholder( "Company" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
